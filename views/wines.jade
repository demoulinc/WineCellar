extends layout

block content
  p #{title}
  table(border='1')
    thead 
        tr 
            th Label
            th Appellation
            th Region
            th Country
            th Color
            th Dealer
            th Grape Varieties
            th Number of Bottles
    tbody
        each item in wines
            tr 
                td #{item.label}
                td #{item.appellation}
                td #{item.region}
                td #{item.country}
                td #{item.color}
                td #{item.dealer}
                td #{item.grapeVarieties}
                td #{item.numberOfBottles}
                
    p 
    button(onclick="move()") New
  script.
    function move() {
        window.location.href = '/wines/add';
    };